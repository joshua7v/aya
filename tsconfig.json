{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
          "*": [
            "src/types/*"
          ]
        }
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "example/**/*.ts"
    ]
}
